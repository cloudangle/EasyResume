<div class="section">
  <blockquote>
    <div class="row">
      <h6 class="header left col s8" style="font-size: 1.3rem"><strong><%= exp.desc %></strong></h6>
      <% if exp.starttime != '' && exp.endtime != '' %>
        <h6 class="header right-align col s4 blue-grey-text text-lighten-1 light" style="font-size: 1.1rem"><i><%= exp.starttime %> ~ <%= exp.endtime %></i></h6><br>
      <% end %>
      <h6 class="header left col s8 light" style="font-size: 1.1rem"><span><%= exp.org %></span></h6>
      <% if exp.location %>
        <h6 class="header right-align col s4 blue-grey-text text-lighten-1 light"><i><%= exp.location %></i></h6>
      <% end %>
    </div>
  </blockquote>
  <% if exp.details %>
      <div class="row">
        <% exp.details.each do |detail| %>
            <p><i class="material-icons left">chevron_right</i><%= detail.content %></p>
        <% end %>
      </div>
  <% end %>
</div>